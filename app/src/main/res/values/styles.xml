<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:actionModeCloseButtonStyle">@style/NoCloseButtonActionModeStyle</item>
    </style>

    <style name="NoCloseButtonActionModeStyle" parent="android:style/Widget.ActionButton.CloseMode">
        <item name="android:visibility">gone</item>
    </style>

    <style name="Title" parent="TextAppearance.AppCompat">
        <item name="android:layout_marginLeft">10dp</item>
        <item name="android:layout_marginRight">10dp</item>
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:layout_marginBottom">5dp</item>
        <item name="android:textSize">32sp</item>
        <item name="android:textColor">@color/gray</item>
    </style>

    <style name="BackButton" parent="TextAppearance.AppCompat.Button">
        <item name="android:layout_width">30dp</item>
        <item name="android:layout_height">30dp</item>
        <item name="android:layout_marginLeft">10dp</item>
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:layout_marginBottom">5dp</item>
        <item name="android:background">@drawable/backspace</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/gray</item>
    </style>

    <style name="AppText" parent="TextAppearance.AppCompat">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/gray</item>
    </style>

    <style name="AppSmallText" parent="TextAppearance.AppCompat">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/gray</item>
    </style>

    <style name="AppButton" parent="TextAppearance.AppCompat.Button">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/gray</item>
    </style>


    <style name="EventTime" parent="TextAppearance.AppCompat">
        <item name="android:textSize">32sp</item>
        <item name="android:textColor">@color/gray</item>
    </style>

    <style name="eventCreationDateTimeText" parent="TextAppearance.AppCompat">
        <item name="android:textAlignment">textEnd</item>
        <item name="android:layout_margin">8dp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/gray</item>
    </style>
</resources>
